<style>
    section {
        display: flex;
        flex-wrap: wrap;
    }
    .beer {
        margin: 10px;
        display: flex;
        align-items: center;
        width: fit-content;
        height: fit-content;
        box-shadow: inset 1px 1px 10px black;
        border-radius: 10px;
        padding: 10px
    }
    .beer img {
        height: 250px;
        margin: auto 15px;
    }
    .beer .text {
        max-width: 300px;
    }
</style>
<section>
    {{#each beersFromApi}}
        <div class="beer">
            <img src="{{this.image_url}}" alt="">
            <div class="text">
                <h1>{{this.name}}</h1>
                <p>{{this.description}}</p>
                <h2>{{this.tagline}}</h2>
            </div>
        </div>
    {{/each}}
</section>